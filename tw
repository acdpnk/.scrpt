#!/bin/bash

logpath="/home/chrifpa/.twlog"

tweet=""

for word in $@; do
	tweet="$tweet $word"
done

count=${#tweet}

let count -= 140

if [ $count -le 0 ]; then
	ttytter -status="$tweet" > $logpath
else
	echo "too long by $count :("
fi

if grep -Fq "FAIL" $logpath; then
	echo "   ...ugh, something went wrong :("
fi
rm $logpath
